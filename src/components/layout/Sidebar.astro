---
import { BLOG_INFO } from '../../consts';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const categories = [...new Set(allPosts.flatMap(post => post.data.categories || []))];
---

<aside class="sidebar">
    <a href="/blog/about" class="avatar">
        <img src={BLOG_INFO.author.avatar} alt="Avatar"/>
    </a>
    <div class="empty"></div>
  <nav>
    <ul class="categories">
        <li>
            <a href="/blog/posts">All Posts</a>
        </li>   
      {categories.map((category) => (
        <li>
          <a href={`/blog/categories/${category}`}>{category}</a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<style>
  .sidebar {
    flex-shrink: 0;
    position: sticky;
    top: 6rem;
    height: fit-content;
    margin-right: 2rem;
  }

  .avatar {
    width: 100px;
    height: 100px;
  }
  .avatar img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
  }
  .avatar:hover {
    opacity: 0.5;
    transition: opacity 0.1s ease-in-out;
  }

  .empty {
    height: 1rem;
  }

  .categories {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .categories a {
    font-size: 0.95rem;
    color: var(--secondary-foreground);
    text-decoration: none;
  }

  .categories a:hover {
    color: var(--primary);
  }

  @media (max-width: 720px) {
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 250px;
      background: var(--card);
      z-index: 1000;
      padding: 2rem;
      border-top: 1px solid var(--muted);
      border-right: 1px solid var(--muted);
      box-shadow: 2px 0 8px rgba(0,0,0,0.1);
      transform: translateX(-100%);
      transition: transform 0.3s ease-in-out;
      overflow-y: auto;
    }

    :global(body.menu-open) .sidebar {
      transform: translateX(0);
    }

    :global(body.menu-open)::after {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      z-index: 999;
    }
  }
</style>

<script>
  // Close menu when clicking outside (on the overlay)
  document.addEventListener('click', (e) => {
    if (document.body.classList.contains('menu-open')) {
      const sidebar = document.querySelector('.sidebar');
      const toggleBtn = document.querySelector('.menu-toggle');
      
      // If click target is NOT sidebar AND NOT toggle button
      if (sidebar && !sidebar.contains(e.target as Node) && 
          toggleBtn && !toggleBtn.contains(e.target as Node)) {
        document.body.classList.remove('menu-open');
      }
    }
  });
</script>