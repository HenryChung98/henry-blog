---
import { BLOG_INFO } from '../consts';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const categories = [...new Set(allPosts.flatMap(post => post.data.categories || []))];
---

<aside class="sidebar">
    <a href="/henry-blog/about">
        <img src={BLOG_INFO.author.avatar} alt="Avatar" class="avatar"/>
    </a>
  <nav>
    <ul class="categories">
        <li>
            <a href="/henry-blog/blog">All Posts</a>
        </li>   
      {categories.map((category) => (
        <li>
          <a href={`/henry-blog/categories/${category}`}>{category}</a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<style>
  .sidebar {
    flex-shrink: 0;
    position: sticky;
    top: 6rem;
    height: fit-content;
    width: 240px;
    padding: 1.5rem;
  }

  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 2rem;
  }

  .categories {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .categories a {
    font-size: 0.95rem;
    color: var(--gray-dark);
    text-decoration: none;
  }

  .categories a:hover {
    color: var(--accent);
  }

  @media (max-width: 1024px) {
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 250px;
      background: white;
      z-index: 1000;
      padding: 2rem;
      border-right: 1px solid rgb(var(--gray-light));
      box-shadow: 2px 0 8px rgba(0,0,0,0.1);
      transform: translateX(-100%);
      transition: transform 0.3s ease-in-out;
      overflow-y: auto;
    }

    :global(body.menu-open) .sidebar {
      transform: translateX(0);
    }

    /* Optional: Add overlay if needed via pseudo-element or separate div */
    :global(body.menu-open)::after {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      z-index: 999;
    }
  }
</style>

<script>
  // Close menu when clicking outside (on the overlay)
  document.addEventListener('click', (e) => {
    if (document.body.classList.contains('menu-open')) {
      const sidebar = document.querySelector('.sidebar');
      const toggleBtn = document.querySelector('.menu-toggle');
      
      // If click target is NOT sidebar AND NOT toggle button
      if (sidebar && !sidebar.contains(e.target as Node) && 
          toggleBtn && !toggleBtn.contains(e.target as Node)) {
        document.body.classList.remove('menu-open');
      }
    }
  });
</script>